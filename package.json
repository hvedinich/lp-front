{
  "name": "lp",
  "version": "0.1.0",
  "private": true,
  "packageManager": "npm@11.8.0",
  "engines": {
    "node": "24.x"
  },
  "scripts": {
    "preinstall": "npx only-allow npm",
    "postinstall": "chakra typegen src/shared/config/theme/index.ts",
    "typegen": "chakra typegen src/shared/config/theme/index.ts",
    "dev": "next dev --port 4000",
    "build": "next build",
    "start": "next start --port 4000",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "tc": "tsc --noEmit",
    "lint:fix": "eslint --fix --ext .js,.jsx,.ts,.tsx .",
    "format": "prettier --write \"**/*.{js,ts,jsx,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,ts,jsx,tsx,json,md}\"",
    "fix": "npm run lint:fix && npm run format",
    "lint:fsd": "steiger ./src",
    "validate": "npm run tc && npm run lint && npm run format:check && npm run lint:fsd",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepare": "husky"
  },
  "dependencies": {
    "@chakra-ui/react": "3.33.0",
    "@emotion/react": "11.14.0",
    "@emotion/styled": "11.14.1",
    "@hookform/resolvers": "5.2.2",
    "@tanstack/react-query": "^5.90.21",
    "i18next": "25.8.13",
    "lucide-react": "^0.575.0",
    "next": "16.1.6",
    "next-themes": "^0.4.6",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "react-hook-form": "7.71.2",
    "react-i18next": "16.5.4",
    "zod": "4.3.6"
  },
  "devDependencies": {
    "@chakra-ui/cli": "^3.33.0",
    "@feature-sliced/steiger-plugin": "^0.5.7",
    "@types/node": "25.3.0",
    "@types/react": "19.2.14",
    "@types/react-dom": "19.2.3",
    "eslint": "^9.19.0",
    "eslint-config-next": "16.1.6",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-boundaries": "^5.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.4.2",
    "steiger": "^0.5.11",
    "typescript": "5.9.3",
    "vitest": "^4.0.0",
    "zod-validation-error": "5.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --fix",
    "*.{js,ts,jsx,tsx,json,md}": "prettier --write"
  }
}
